{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "nodenext", //ES2022
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}